@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <div class="bg-gray text-center">
        <h1 class="text-light">Are you sure?</h1>
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline text-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <div style="padding: 20px;" />
                    <button type="submit" class="btn-login">Click here to Logout</button>
                </form>
            }
            else
            {
                <p class="text-light">You have successfully logged out of the application.</p>
            }
            <div style="padding: 220px;">
            </div>
        }
    </div>
</header>
