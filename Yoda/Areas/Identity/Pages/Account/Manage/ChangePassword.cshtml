@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<div class="row col-3">
    <<a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-light btn-lg">←</a>
<h3 class="text-light">@ViewData["Title"]</h3>
 </div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <label class=" text-light col-sm-2 col-form-label">Old Password</label>
                <div class="col-sm-10">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class=" text-light col-sm-2 col-form-label">New Password</label>
                <div class="col-sm-10">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class=" text-light col-sm-2 col-form-label">Confirm</label>
                <div class="col-sm-10">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
           
            <button type="submit" class="btn-signup">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
