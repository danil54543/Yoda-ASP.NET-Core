@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="bg-gray">
    <h3 class="bg-gray text-light">@ViewData["Title"]</h3>
    <partial class="bg-gray" name="_StatusMessage" for="StatusMessage" />
    <div class="bg-gray row">
        <div class="bg-gray col-md-6">
            <form class="bg-gray" id="profile-form" method="post">
                <div class="bg-gray" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" disabled />
                    <label asp-for="Username" class="form-label">Email</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control" />
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div>
					<button id="update-profile-button" type="submit" class="w-100 btn-signup">Save</button>
                </div>
                
            </form>
        </div>
        <button class="btn-newnote"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></button>
        <button class="btn-newnote"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></button>

    </div>
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-light">Delete your account</h3>
            
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
                <span class="text-warning"> (cannot be recovered)</span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
