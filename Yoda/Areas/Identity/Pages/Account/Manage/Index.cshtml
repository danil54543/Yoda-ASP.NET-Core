@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="bg-gray">
    <h3 class="bg-gray text-light">@ViewData["Title"]</h3>
    <partial class="bg-gray" name="_StatusMessage" for="StatusMessage" />
    <div class="bg-gray row">
        <div class="bg-gray col-md-6">
            <form class="bg-gray" id="profile-form" method="post">
                <div class="bg-gray" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </form>
        </div>
        <div style="padding: 70px;"></div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
