@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="bg-gray">
    <div class=" col-lg-6 col-md-8 mx-auto text-center">
        <h1 class="text-light">@ViewData["Title"]</h1>
        <h3 class="text-light">Enter your email.</h3>
        <
        <form method="post" class="col-12 py-5 text-center container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-lg btn-signup">Reset Password</button>
        </form>
    </div>
    <div style="padding: 200px;"></div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
